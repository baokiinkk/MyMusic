<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".ui.activity.LoginActivity">

    <TextView
        android:id="@+id/btnClose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:drawableStartCompat="@drawable/ic_back" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/playfairdisplay_bold"
        android:gravity="center"
        android:layout_marginVertical="50dp"
        android:text="Đăng Nhập"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_loginGg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/background_btn_google"
        android:drawableStart="@drawable/ic_google"
        android:fontFamily="@font/playfairdisplay_medium"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:paddingStart="20dp"
        android:text="@string/login_google"
        android:textAllCaps="false"
        android:textColor="@color/text_color_white"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_loginFb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/background_btn_facebook"
        android:drawableStart="@drawable/ic_facebook"
        android:fontFamily="@font/playfairdisplay_medium"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:paddingStart="20dp"
        android:text="@string/login_facebook"
        android:textAllCaps="false"
        android:textColor="@color/text_color_white"
        android:textSize="20sp" />
</LinearLayout>
