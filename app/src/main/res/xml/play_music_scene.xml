<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/title"
            motion:clickAction="toggle" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="50dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:id="@+id/containerPlay"
            android:layout_marginBottom="0dp" />
        <Constraint
            android:id="@+id/btnPrev"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@+id/btnPlay"
            motion:layout_constraintTop_toTopOf="@+id/btnPlay"
            motion:layout_constraintEnd_toEndOf="@id/btnPlay"
            android:scaleX="0.5"
            android:scaleY="0.5"
            motion:layout_constraintEnd_toStartOf="@+id/btnPlay" />
        <Constraint
            android:layout_height="30dp"
            motion:layout_constraintTop_toTopOf="@+id/btnPlay"
            motion:layout_constraintBottom_toBottomOf="@+id/btnPlay"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="30dp"
            android:id="@+id/btnNext" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:id="@+id/btnPlay"
            motion:layout_constraintBottom_toBottomOf="@+id/containerPlay"
            motion:layout_constraintTop_toTopOf="@+id/containerPlay"
            android:layout_marginTop="19dp"
            motion:layout_constraintEnd_toStartOf="@+id/btnNext"
            android:scaleX="0.5"
            android:scaleY="0.5" />
        <Constraint
            android:layout_height="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:id="@+id/linearLayout"
            motion:layout_constraintTop_toBottomOf="@+id/containerPlay"
            android:layout_marginTop="0dp" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="@id/title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="@id/title"
            motion:layout_constraintStart_toStartOf="@id/title"
            android:id="@+id/image"
            motion:layout_constraintBottom_toBottomOf="@id/title" />
        <Constraint
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="@+id/containerPlay"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/btnPlay"
            android:layout_marginEnd="10dp"
            motion:layout_constraintBottom_toBottomOf="parent" />
    </ConstraintSet>
</MotionScene>